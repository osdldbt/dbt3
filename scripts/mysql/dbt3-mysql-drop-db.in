# Double check we have a value for PGDATA
if [ -z ${MYDATA} ]; then
	echo "MYDATA not defined."
	exit 1
fi

if [ -z ${DBNAME} ]; then
	echo "DBNAME not defined."
	exit 1
fi

mysqladmin -u root --force drop $DBNAME || exit 1
