if [ "x" = "x${MYDATA}" ]; then
	echo "ERROR: MYDATA must be set"
	exit 1
fi

HOSTNAME=`hostname`
PIDFILE=$MYDATA/$HOSTNAME.pid

mysqladmin -s ping > /dev/null 2>&1
if [ $? -eq 1 ]; then
	exit 0
fi

mysqladmin -u root shutdown
count=0
while [ 1 ]; do
	mysqladmin -s ping > /dev/null 2>&1
	if [ $? -ne 1 ]; then
		if [ $count -eq 60 ]; then
			echo "failed waiting for mysql to stop"
			exit 1
		fi
		sleep 1
		count=$(( $count + 1 ))
		continue
	fi
	break
done
